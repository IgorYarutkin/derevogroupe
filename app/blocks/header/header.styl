.header
	position relative
	display block
	&::after
		position absolute
		z-index -1
		left 0
		bottom 20px
		width 100%
		height 2px
		content ''
		background-color fontGrey
	&__container
		padding 35px 80px 10px 90px
		display flex
	&__logo
		margin-right 90px
		display block
	&__search-form
		margin-left auto
		padding-top 20px
		display flex
	&__search-input
		margin-right 10px
		height 37px
		font-family fontDisplay
		font-size 12px
		text-transform uppercase
		text-align right
		border none
	&__search-icon
		margin-top 5px
		width 18px
		height 18px
