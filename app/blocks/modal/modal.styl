.modal
	position fixed
	z-index 10
	top 50%
	left 50%
	padding 20px
	display none
	width 550px
	font-family fontDisplay
	font-size 14px
	color fontParagraph
	background-color #fff
	transform translate(-50%, -50%)
	&__close
		position absolute
		top -12px
		right -12px
		width 25px
		height 25px
		background-color #000
		border none
		&::before, &::after
			position absolute
			top 11px
			left 2px
			width 20px
			height 2px
			content ''
			background-color #fff
			transform rotate(55deg)
		&::after
			transform rotate(-60deg)
	&__title
		margin-bottom 20px
		font-size 18px
	&__text
		margin-top 30px
		font-size 14px
		line-height 1.3
	&__gallery
		display flex
		flex-wrap wrap
	&__image-container
		display flex
		flex-direction column
		align-items center
		margin-bottom 20px
	&--select &__image-container,
	&--form &__image-container
		width 33.3%
	&--structure &__image-container
		width 50%
	&__input
		display none
	&__label
		margin-top 15px
		text-align center
		cursor pointer
