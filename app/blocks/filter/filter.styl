.filter
	display block
	&__title
		margin-bottom 15px
		color fontParagraph
		font-size 18px
		font-family fontDisplay
	&__container
		display flex
		justify-content space-between
		flex-wrap wrap
		width 535px
	&__item
		position relative
		width 255px
		height 95px
		&:first-child
			margin-bottom 15px
		&--active .modal
			display block
	&__item-label
		position absolute
		bottom 0
		left 0
		padding-left 10px
		width 100%
		color: #fff
		line-height 25px
		background-color rgba(0, 0, 0, 0.5)
