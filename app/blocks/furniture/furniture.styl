.furniture
	display block
	padding-top 115px
	&__container
		padding 0 0 20px (80/1600*100)%
		display flex
		justify-content space-between
		min-height 690px
		background-image url('../images/bg_furniture.jpg')
		background-size cover
	&__title
		margin-bottom 10px
		font-size 26px
		text-transform uppercase
	&__description
		flex-grow 1
		padding-right (75/1600*100)%
		color fontParagraph
		font-family fontDisplay
		overflow auto
	&__subtitle
		margin 60px 0 25px
		font-size 36px
		text-transform uppercase
	&__text
		margin-bottom 30px
		font-size 18px
		line-height 1.3
		&:first-of-type
			margin-top 50px
		&:last-child
			margin-bottom 0
	&__subtitle + &__text
		margin 0
	&__print
		position relative
		top 17px
		display inline-block
	&__print-icon
		width 55px
		height 50px
	&__modal-window
		display none
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(63, 67, 65, 0.8)
		z-index 1000
	&__modal-image
		position fixed
		top 50%
		left 50%
		padding 20px 40px
		width 1190px
		height 660px
		background-image url('../images/about_modal.jpg')
		background-repeat no-repeat
		background-size cover
		transform translate(-50%, -50%)
		z-index 2000
	&__modal-close
		position absolute
		top -12px
		right -12px
		width 25px
		height 25px
		background-color #fff
		border none
		&::before, &::after
			position absolute
			content ""
			top 11px
			left 2px
			width 20px
			height 2px
			background-color fontParagraph
			transform rotate(55deg)
		&::after
			transform rotate(-60deg)
