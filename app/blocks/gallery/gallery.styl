.gallery
	position relative
	display flex
	flex-shrink 0
	height 700px
	&--furniture
		width 890px
	&--flooring,
	&--about
		width 850px
	&--product
		width 845px
	&--profile
		width 885px
	&__item
		display flex
		flex-direction column
		justify-content space-between
		margin-right 4px
		height 700px
	&--product &__item
		flex-direction row
		justify-content space-between
		align-content space-between
		flex-wrap wrap
		width 100%
	&__item-inner
		position relative
		&:hover .gallery__popup
			display block
	&__popup
		display none
		position absolute
		bottom 0
		left 0
		padding 25px 20px 65px
		width 100%
		color #fff
		font-size 12px
		background-color rgba(28, 28, 28, 0.65)
	&__popup-title
		margin-bottom 30px
		font-size 18px
	&__popup-text
		line-height 1.3
	&__button
		position: absolute
		bottom: 50%
		right: 0
		padding 15px 35px
		width 270px
		color #fff
		text-align center
		text-decoration none
		background-color rgba(0, 0, 0, 0.5)
		transform translateY(-50%)
		cursor pointer
	&--product &__button,
	&--about &__button
		display none
		&:hover
			opacity 0.6
		&::after
			position absolute
			content ""
			top 13px
			right 35px
			width 10px
			height 20px
			background-image url('../images/arrow_right.png')
			background-repeat no-repeat
			background-size cover
