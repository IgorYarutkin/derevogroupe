.gallery
	position relative
	display flex
	flex-shrink 0
	height 700px
	&--furniture
		width 890px
	&--flooring,
	&--about,
	&--portfolio
		width 850px
	&--product
		width 845px
	&--profile
		width 885px
	&__item
		margin-right 4px
		display flex
		flex-direction column
		justify-content space-between
		height 700px
	&--product &__item
		flex-direction row
		justify-content space-between
		align-content space-between
		flex-wrap wrap
		width 100%
	&__item-inner
		position relative
		&:hover .gallery__popup
			display block
	&__popup
		position absolute
		left 0
		bottom 0
		padding 25px 20px 65px
		display none
		width 100%
		font-size 12px
		color #fff
		background-color rgba(28, 28, 28, .65)
	&__popup-title
		margin-bottom 30px
		font-size 18px
	&__popup-text
		line-height 1.3
	&__button
		position absolute
		right 0
		bottom 50%
		padding 15px 35px
		width 270px
		text-align center
		text-decoration none
		cursor pointer
		color #fff
		background-color rgba(0, 0, 0, .5)
		transform translateY(-50%)
	&--product &__button,
	&--about &__button
		display none
		&:hover
			opacity .6
		&::after
			position absolute
			top 13px
			right 35px
			width 10px
			height 20px
			content ''
			background-image url('../images/arrow_right.png')
			background-repeat no-repeat
			background-size cover
