.content
	display block
	background-color bgColor
	&__container
		padding 210px (420/1600*100)% 40px
		min-height 827px
		background-image url('../images/bg_index.jpg')
		background-repeat no-repeat
		background-size cover
		background-position center top
	&__title
		margin 0 0 115px
		padding 0
		font-size 60px
		color #fff
		text-transform uppercase
		text-align center
		line-height 1.3
	&__button
		position relative
		margin 0 auto
		padding 15px 35px
		display block
		width 265px
		font-size 16px
		color #fff
		text-align center
		text-decoration none
		border 1px solid #fff
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.6)
		cursor pointer
		&:hover
			opacity 0.6
		&::after
			position absolute
			content ""
			top 13px
			right 35px
			width 10px
			height 20px
			background-image url('../images/arrow_right.png')
			background-repeat no-repeat
			background-size cover
	&__button-icon
		display inline-block
		width 10px
		height 20px
		background-image url('../images/arrow_right.png')
		background-repeat no-repeat
		background-size cover
