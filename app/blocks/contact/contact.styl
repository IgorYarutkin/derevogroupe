.contact
	padding-top 115px
	display block
	&__container
		padding-left (80/1600*100)%
		display flex
		justify-content space-between
	&__title
		margin-bottom 10px
		font-size 26px
		text-transform uppercase
	&__description
		flex-grow 1
		padding-right (75/1600*100)%
		width 40%
		font-family fontDisplay
		color fontParagraph
	&__subtitle
		margin 60px 0 25px
		font-size 36px
		text-transform uppercase
	&__text
		margin-bottom 30px
		font-size 18px
		line-height 1.3
		&:first-of-type
			margin-top 50px
		&:last-child
			margin-bottom 0
	&__subtitle + &__text
		margin 0
	&__form
		display flex
		flex-direction column
		width 320px
	&__form-title
		font-size 18px
	&__field
		margin-top 15px
		padding 10px
		width 235px
		font-size 14px
		&[rows]
			width 100%
	&__submit
		margin-top 25px
		padding 10px 40px
		width 235px
		color #fff
		background-color fontParagraph
		border none
	&__map
		width 60%

